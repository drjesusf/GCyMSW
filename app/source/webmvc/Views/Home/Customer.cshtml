<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <br/><br />
<button type="button" onclick="load()">Saludar</button>
<br/><br />
<p id="saludo"></p>

<script>
    function load() {
        var xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function () {
            var response = this;
            console.log(response);
            if (this.readyState === 4 && this.status === 200) {
                document.getElementById("saludo").innerHTML = this.response;
            }
        };
        xhttp.open("GET", "../api/values", true);
        xhttp.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
        xhttp.send();
    }
</script>
</body>

</html>